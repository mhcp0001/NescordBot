{
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1"
  },
  "permissions": {
    "allow": [
      "Bash(poetry run pytest:*)",
      "Bash(poetry run black:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(gh project list:*)",
      "Bash(gh project item-list:*)",
      "Bash(gh project item-edit:*)",
      "mcp__serena",
      "Bash(git checkout:*)",
      "mcp__vibe_kanban__update_task",
      "mcp__vibe_kanban__list_projects",
      "Bash(poetry run mypy:*)",
      "Bash(poetry run isort:*)",
      "Bash(poetry run flake8:*)",
      "Bash(git pull:*)",
      "Bash(git reset:*)",
      "Bash(git push:*)",
      "Bash(gh run list:*)",
      "mcp__gemini-yusukedev",
      "Read",
      "Bash(gh run view:*)",
      "Search",
      "Read(/E:\\workspace\\NescordBot-1\\tests\\services/**)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "github",
    "playwright",
    "readability"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -WindowStyle Hidden -File .claude/scripts/deny-check.ps1"
          }
        ]
      }
    ]
  }
}
